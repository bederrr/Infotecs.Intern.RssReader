@using System
@model RssReaderOptions
@{
    ViewData["Title"] = "Settings";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    <div>
        @Html.TextBoxFor(b => b.UpdateInterval, new { @class = "form-control", placeholder = "Update Interval" })


        <br/>
        @Html.CheckBoxFor(b => b.EnableFormatting)
        @Html.LabelFor(b => b.EnableFormatting)
        @Html.ValidationMessageFor(b => b.EnableFormatting)
        <br/>

        @{
            string feeds = ViewBag.feeds;
        }

        @Html.TextAreaFor(b => feeds, new { @class = "form-control", placeholder = "Sources of RSS", rows = 5 })
    </div>
    <br/>
    <button class="btn btn-success" type="submit">Save</button>
}